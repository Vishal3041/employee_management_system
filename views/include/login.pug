extends ../layout

block content
    .login-box
        .header
            h2 Log In
        form(action="/auth_login", method="post" required)
            .form-group
                label(for="username") Username 
                input(type="username" name="username" class="form-control shadow-none" required)
            .form-group
                label(for="password") Password
                input(type="password" name="password" class="form-control")
            button(type="submit" class="btn btn-primary") Login